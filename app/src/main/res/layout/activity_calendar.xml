<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Layout with Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#9A000000"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Botão Voltar (Seta) -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingStart="16dp"
                android:padding="4dp"
                android:background="@drawable/ripple_back"
                android:src="@drawable/back"
                android:contentDescription="Voltar"
                app:tint="@color/white" />

            <!-- Título Centralizado -->
            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calendário"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Content Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Applandeo CalendarView -->
            <com.applandeo.materialcalendarview.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_back4"
                app:headerColor="#9A000000"
                app:todayLabelColor="@color/white"
                app:selectionColor="@color/darker_gray"
                app:eventsEnabled="true"/>

            <!-- Selected Date Text -->
            <TextView
                android:id="@+id/selectedDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data selecionada: Nenhuma"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Fixed Table Layout Inside the ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#00A89F9F"
            android:elevation="4dp">

            <TableLayout
                android:id="@+id/itemsTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1"
                android:stretchColumns="1"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
