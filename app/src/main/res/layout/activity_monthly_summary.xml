<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#9A000000"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingStart="16dp"
            android:padding="4dp"
            android:background="@drawable/ripple_back"
            android:src="@drawable/back"
            android:contentDescription="Voltar"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resumo Mensal"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Texto do Resumo Mensal -->
    <TextView
        android:id="@+id/monthSummaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Mês: jan/2025"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:gravity="center" />

    <!-- Botões de Navegação entre Meses -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/previousMonthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/edittext_background"
            android:layout_marginEnd="16dp"
            android:text="Anterior" />

        <Button
            android:id="@+id/nextMonthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:textColor="@color/white"
            android:text="Próximo" />

    </LinearLayout>

    <!-- Gráfico de Pizza -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp" />

    <!-- Tabela de Categorias -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="SpeakableTextPresentCheck">

        <TableLayout
            android:id="@+id/categoryTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:shrinkColumns="1"
            android:stretchColumns="1" />
    </ScrollView>

    </LinearLayout>

</ScrollView>
